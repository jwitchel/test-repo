{
  "name": "ai-email-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "test": "jest",
    "server": "nodemon server/src/server.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "server:prod": "node server/dist/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "db:migrate": "node db/migrate.js",
    "db:test": "node db/test-connection.js",
    "docker:test": "./scripts/test-docker.sh",
    "test:mail:start": "docker-compose -f docker-compose.test.yml up -d --remove-orphans",
    "test:mail:stop": "docker-compose -f docker-compose.test.yml down",
    "test:mail:setup": "bash scripts/setup-test-accounts.sh",
    "test:mail:logs": "docker logs test-mailserver -f",
    "test:mail:reset": "npm run test:mail:stop && rm -rf test-mail-data && npm run test:mail:start && npm run test:mail:setup",
    "create-test-users": "node scripts/create-test-users.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@noble/hashes": "^1.8.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "imap": "^0.8.19",
    "kysely": "^0.28.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "sonner": "^2.0.6",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.7",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3"
  }
}
