{
  "name": "ai-email-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:all": "npm run redis:reset && npm run dev:kill-ports && concurrently -n \"NEXT,SERVER,WORKERS\" -c \"blue,green,yellow\" \"npm run dev\" \"npm run server\" \"npm run workers\"",
    "dev:backend": "npm run dev:kill-ports && concurrently -n \"SERVER,WORKERS\" -c \"green,yellow\" \"npm run server\" \"npm run workers\"",
    "dev:kill-ports": "lsof -ti:3001,3002 | xargs kill -9 2>/dev/null || true",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "server": "nodemon --config server/nodemon.json",
    "server:verbose": "nodemon --verbose --config server/nodemon.json",
    "server:debug": "node scripts/debug-nodemon.js",
    "server:build": "tsc -p server/tsconfig.json",
    "server:prod": "node server/dist/server.js",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:coverage": "jest --coverage",
    "postgres:up": "docker compose up -d postgres",
    "postgres:down": "docker compose stop postgres && docker compose rm -f postgres",
    "postgres:reset": "npm run postgres:down && docker compose down -v postgres && npm run postgres:up",
    "postgres:logs": "docker compose logs -f postgres",
    "redis:up": "docker compose up -d redis",
    "redis:down": "docker compose stop redis && docker compose rm -f redis",
    "redis:reset": "npm run redis:down && docker compose down -v redis && npm run redis:up",
    "redis:logs": "docker compose logs -f redis",
    "db:migrate": "node db/migrate.js",
    "seed": "cd server && npx tsx src/scripts/seed-demo.ts",
    "tone:e2e": "cd server && npx tsx src/scripts/tests/test-e2e-flow.ts",
    "vector:test": "cd server && npx tsx src/scripts/tests/vector-comprehensive-test.ts",
    "qdrant:up": "docker compose up -d qdrant",
    "qdrant:down": "docker compose stop qdrant && docker compose rm -f qdrant",
    "qdrant:reset": "npm run qdrant:down && rm -rf qdrant_storage && npm run qdrant:up",
    "qdrant:logs": "docker compose logs -f qdrant",
    "mail:up": "docker run -d --name test-mailserver --hostname mail.testmail.local -p 1025:25 -p 1143:143 -p 1587:587 -p 1993:993 -e OVERRIDE_HOSTNAME=mail.testmail.local mailserver/docker-mailserver:latest",
    "mail:down": "docker stop test-mailserver && docker rm test-mailserver",
    "mail:reset": "npm run mail:down && npm run mail:up && sleep 3 && npm run mail:seed",
    "mail:logs": "docker logs -f test-mailserver",
    "mail:seed": "cd server && npx tsx src/scripts/tools/seed-mail-accounts.ts",
    "mail:load-johns": "cd server && npx tsx src/scripts/tools/load-johns-emails.ts",
    "mail:fix-encryption": "cd server && npx tsx src/scripts/tools/fix-test-account-encryption.ts",
    "mail:fix-encryption-simple": "cd server && npx tsx src/scripts/tools/fix-test-account-encryption-simple.ts",
    "roundcube:up": "docker-compose -f docker-compose.roundcube.yml up -d",
    "roundcube:down": "docker-compose -f docker-compose.roundcube.yml down",
    "roundcube:logs": "docker logs -f roundcube",
    "docker:up": "docker compose up -d postgres redis qdrant && npm run mail:up",
    "docker:down": "docker compose down && npm run mail:down 2>/dev/null || true",
    "docker:reset": "npm run docker:down && rm -rf qdrant_storage && npm run docker:up && sleep 5 && npm run db:migrate && npm run seed && npm run mail:seed",
    "docker:logs": "docker compose logs -f postgres redis qdrant",
    "monitor:files": "node scripts/monitor-file-changes.js",
    "monitor:all": "node scripts/monitor-all-changes.js",
    "monitor:process": "node scripts/monitor-node-process.js",
    "monitor:logs": "node scripts/watch-server-logs.js",
    "test:stability": "node scripts/test-server-stability.js",
    "system:reset": "npm run docker:reset",
    "workers": "cd server && npx ts-node src/scripts/start-workers.ts",
    "workers:test": "cd server && npx ts-node src/scripts/test-workers.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/openai": "^1.3.23",
    "@ai-sdk/openai-compatible": "^0.2.16",
    "@hookform/resolvers": "^5.1.1",
    "@noble/hashes": "^1.8.0",
    "@qdrant/js-client-rest": "^1.14.1",
    "@radix-ui/react-accordion": "^1.2.11",
