    "@types/email-reply-parser": "^1.4.2",
    "@types/handlebars": "^4.0.40",
    "@types/highland": "^2.13.0",
    "@types/ioredis": "^4.28.10",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.17.2",
    "ai": "^4.3.19",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.12",
    "bullmq": "^5.58.0",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compromise": "^14.14.4",
    "compromise-sentences": "^0.3.0",
    "compromise-stats": "^0.1.1",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "email-reply-parser": "^2.0.1",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "he": "^1.2.0",
    "highland": "^2.13.5",
    "html-to-text": "^9.0.5",
    "imap": "^0.8.17",
    "ioredis": "^5.7.0",
